{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "typeRoots": [ "./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"],
    }
  },
  "include": [
    "src/**/*",
    ".d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/admin_spa/**/*"
  ]
}